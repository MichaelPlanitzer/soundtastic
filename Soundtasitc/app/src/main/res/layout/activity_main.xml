<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rec"
        android:id="@+id/buttonRec"
        android:background="@null"
        android:src="@drawable/play_on"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="190dp" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause Rec"
        android:id="@+id/buttonPauseRec"
        android:background="@null"
        android:src="@drawable/pause"
        android:layout_alignTop="@+id/buttonRec"
        android:layout_toEndOf="@+id/buttonRec"
        android:layout_toRightOf="@+id/buttonRec"
        android:onClick="onClick" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Rec"
        android:id="@+id/buttonStopRec"
        android:background="@null"
        android:src="@drawable/sound_on"
        android:layout_above="@+id/buttonSaveRec"
        android:layout_alignStart="@+id/buttonSaveRec"
        android:layout_alignLeft="@+id/buttonSaveRec"
        android:onClick="onClick" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Rec"
        android:id="@+id/buttonSaveRec"
        android:background="@null"
        android:src="@drawable/sound"
        android:onClick="onClick"
        android:layout_below="@+id/buttonPauseRec"
        android:layout_toStartOf="@+id/buttonStop"
        android:layout_toLeftOf="@+id/buttonStop"/>

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discard Rec"
        android:id="@+id/buttonDiscardRec"
        android:background="@null"
        android:src="@drawable/stop_on"
        android:layout_below="@+id/buttonStopRec"
        android:layout_toEndOf="@+id/buttonSaveRec"
        android:layout_toRightOf="@+id/buttonSaveRec"
        android:onClick="onClick" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PlayT"
        android:id="@+id/buttonPlay"
        android:background="@null"
        android:src="@drawable/play"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PauseT"
        android:id="@+id/buttonPause"
        android:background="@null"
        android:src="@drawable/pause"
        android:onClick="onClick"
        android:layout_alignTop="@+id/buttonPlay"
        android:layout_toStartOf="@+id/buttonPlay"
        android:layout_toLeftOf="@+id/buttonPlay"/>

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StopT"
        android:id="@+id/buttonStop"
        android:background="@null"
        android:src="@drawable/stop"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonPlay"
        android:layout_toRightOf="@+id/buttonPlay"/>

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ForwardT"
        android:id="@+id/buttonForward"
        android:background="@null"
        android:src="@drawable/forward"
        android:onClick="onClick"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttonStop"
        android:layout_toRightOf="@+id/buttonStop"/>

    <ImageButton
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RewindT"
        android:id="@+id/buttonRewind"
        android:background="@null"
        android:src="@drawable/rewind"
        android:onClick="onClick"
        android:layout_alignTop="@+id/buttonPause"
        android:layout_toStartOf="@+id/buttonPause"
        android:layout_toLeftOf="@+id/buttonPause"/>

</RelativeLayout>
